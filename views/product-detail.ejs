<!-- product-detail.ejs -->
<!DOCTYPE html>
<html lang="vi">
  <%- include('partials/head', { title: 'Chi Tiết Sản Phẩm' }) %>
  <body>

    <div class="container py-5">
      <h1><%= product.name %></h1>
        <p><%= product.description %></p>
          <p><%= product.price %>₫</p>      
        <div class="col-md-6">
          <img src="<%= product.image %>" alt="<%= product.name %>" class="img-fluid">
        </div>
        <div class="col-md-6">
          <p class="fw-bold text-primary"><%= product.price.toLocaleString() %>₫</p>
          <% if (product.oldPrice) { %>
            <p class="text-muted"><del><%= product.oldPrice.toLocaleString() %>₫</del></p>
          <% } %>
          <p><%= product.description %></p>
          <button class="btn btn-primary">Thêm vào giỏ</button>
        </div><!-- product-detail.ejs -->
        <%- include('../partials/head', { title: product.name }) %>
        
        <div class="container py-5">
          <h2 class="text-center mb-4"><%= product.name %></h2>
          <div class="row">
            <div class="col-md-6">
              <img src="<%= product.image %>" class="img-fluid" alt="<%= product.name %>">
            </div>
            <div class="col-md-6">
              <p><%= product.description %></p>
              <p class="text-danger"><%= product.price.toLocaleString() %>₫</p>
              <% if (product.discountedPrice) { %>
                <p><del><%= product.discountedPrice.toLocaleString() %>₫</del></p>
              <% } %>
              <form action="/add-to-cart" method="POST">
                <input type="hidden" name="productId" value="<%= product._id %>">
                <input type="number" name="quantity" min="1" value="1" required>
                <button type="submit" class="btn btn-primary">Thêm vào giỏ hàng</button>
              </form>
            </div>
          </div>
        </div>
        
        <%- include('../partials/footer') %>
        
      </div>
    </div>

    <%- include('partials/footer') %>
  </body>
</html>
