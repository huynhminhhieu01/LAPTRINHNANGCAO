<!-- views/admin/editProduct.ejs -->
<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Sửa sản phẩm</title>
</head>
<body>
  <h1>Sửa thông tin sản phẩm</h1>

  <form action="/admin/products/edit/<%= product._id %>" method="POST" enctype="multipart/form-data">
    <label for="name">Tên sản phẩm:</label>
    <input type="text" id="name" name="name" value="<%= product.name %>" required><br><br>

    <label for="price">Giá:</label>
    <input type="number" id="price" name="price" value="<%= product.price %>" required><br><br>

    <label for="description">Mô tả:</label>
    <textarea id="description" name="description" required><%= product.description %></textarea><br><br>

    <label for="image">Hình ảnh:</label>
    <input type="file" id="image" name="image" accept="image/*"><br><br>

    <button type="submit">Lưu thay đổi</button>
  </form>

  <br>
  <a href="/admin/products">Quay lại danh sách sản phẩm</a>
</body>
</html>
