<%- include('partials/head') %>

<div class="container py-5">
  <h2 class="mb-4 text-center fw-bold">Giỏ Hàng</h2>

  <% if (cart.length > 0) { %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Sản phẩm</th>
          <th>Số lượng</th>
          <th>Giá</th>
          <th>Tổng</th>
        </tr>
      </thead>
      <tbody>
        <% cart.forEach(item => { %>
          <tr>
            <td><%= item.item.name %></td>
            <td><%= item.quantity %></td>
            <td><%= item.item.price %>₫</td>
            <td><%= item.price %>₫</td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <div class="text-end">
      <h4>Tổng cộng: <%= totalPrice %>₫</h4>
    </div>
  <% } else { %>
    <p class="text-center text-muted">Giỏ hàng của bạn đang trống.</p>
  <% } %>
</div>

<%- include('partials/footer') %>
