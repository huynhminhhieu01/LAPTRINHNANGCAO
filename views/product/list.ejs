<%- include('../partials/head') %>  <!-- Loại bỏ phần truyền title -->

<body>
  <div class="container py-5">
    <h2>Tất cả sản phẩm</h2>  <!-- Tiêu đề cố định, không cần title -->

    <div class="row">
      <% products.forEach(function(prod) { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
          <div class="card">
            <img src="<%= prod.image %>" alt="<%= prod.name %>" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title"><%= prod.name %></h5>
              <p class="card-text"><%= prod.price.toLocaleString() %>₫</p>
            </div>
            <div class="card-footer">
              <a href="/products/<%= prod._id %>" class="btn btn-primary">Chi tiết</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
