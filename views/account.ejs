<!DOCTYPE html>
<html lang="vi">

<%- include('partials/head', { title: 'Tài khoản cá nhân' }) %>

<body>
  <main class="py-5 bg-light">
    <div class="container">
      <div class="card shadow-sm">
        <div class="card-body">
          <% if (user) { %>
            <h3 class="card-title mb-3">Tài khoản của <strong><%= user.username %></strong></h3>

            <ul class="list-group list-group-flush mb-4">
              <li class="list-group-item"><strong>Họ và tên:</strong> <%= user.fullName %></li>
              <li class="list-group-item"><strong>Email:</strong> <%= user.email %></li>
              <li class="list-group-item"><strong>Địa chỉ:</strong> <%= user.address %></li>
            </ul>

            <h4 class="mb-3">Đơn hàng của bạn</h4>
            <% if (user.orders && user.orders.length > 0) { %>
              <ul class="list-group">
                <% user.orders.forEach(order => { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>Đơn hàng <strong>#<%= order.id %></strong></span>
                    <span class="badge bg-success"><%= order.status %></span>
                  </li>
                <% }); %>
              </ul>
            <% } else { %>
              <p class="text-muted">Bạn chưa có đơn hàng nào.</p>
            <% } %>

          <% } else { %>
            <div class="alert alert-warning" role="alert">
              Bạn chưa đăng nhập. <a href="/login" class="alert-link">Đăng nhập ngay</a>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
